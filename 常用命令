npm install -g cnpm --registry=https://registry.npm.taobao.org //安装cnpm组件（镜像淘宝）

npm --registry https://registry.npm.taobao.org install express //npm指向淘宝镜像（临时指向）

npm config set registry https://registry.npm.taobao.org //npm指向淘宝镜像（永久指向）（推荐）

npm install -g cordova ionic //安装cordova ionic

npm update -g cordova ionic //更新cordova ionic

npm cache clean  //清除npm缓存

ionic start xxx --type=ionic1 //创建项目

ionic platform add android  //安装安卓平台

ionic platform rm android  //移除安卓平台

ionic build android //编译安卓apk

ionic emulate android //运行项目apk 在模拟器中运行，或安装到手机运行（手机通过USB连接到电脑，且开启USB调试模式）

ionic run android //相当于build + emulate
 
ionic -v  //查看版本
